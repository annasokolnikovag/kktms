            <Button x:Name="TBLength2" Content="" HorizontalAlignment="Left" Margin="220,65,0,0" VerticalAlignment="Top" Height="30" Width="184"/>
            <Button x:Name="TBWidth2" Content="" HorizontalAlignment="Left" Margin="220,114,0,0" VerticalAlignment="Top" Height="30" Width="184"/>
            <Button x:Name="TBNumPerson2" Content="" HorizontalAlignment="Left" Margin="220,166,0,0" VerticalAlignment="Top" Height="30" Width="184"/>
        </Grid>
        <Button x:Name="ExitButton" Content="Выход" HorizontalAlignment="Left" Margin="895,45,0,0" VerticalAlignment="Top" Height="53" Width="174" FontSize="20" AutomationProperties.Name=""/>
        <Button x:Name="ButtonOpen1" Content="Открыть" HorizontalAlignment="Left" Margin="30,557,0,0" VerticalAlignment="Top" FontSize="18" Height="47" Width="240" Click="ButtonOpen1_Click"/>
        <Button x:Name="ButtonAll" Content="Посчитать вместе" HorizontalAlignment="Left" Margin="30,630,0,0" VerticalAlignment="Top" FontSize="18" Height="47" Width="240" Click="ButtonOpen1_Click"/>
        <Button x:Name="ButtonOpen2" Content="Открыть" HorizontalAlignment="Left" Margin="564,554,0,0" VerticalAlignment="Top" FontSize="18" Height="47" Width="240" Click="ButtonOpen1_Click"/>
        <Label x:Name="LabelAllArea" Content="" HorizontalAlignment="Left" Height="47" Margin="566,630,0,0" VerticalAlignment="Top" Width="240"/>
        <Label x:Name="общплощ" Content="Общая площадь" HorizontalAlignment="Left" Margin="406,640,0,0" VerticalAlignment="Top" FontSize="18"/>
    </Grid>
</Window>
